mixin cards(oneCard)
    figure
        figcaption
            if oneCard.isBest
                .best-offer
            .blockImg.text-align-center.p-4
                img(src=oneCard.img, alt=oneCard.alt)
            h4.shortDesc.regular.text-align-center.m-0 #{oneCard.title}
            span.d-flex.justify-content-center
                p #{oneCard.price}
                | грн *
            .descriptionFigure
                for oneText in oneCard.description 
                    p #{oneText}
mixin menu(menu, colorTheme="light")
    .navigation
        .container
            .row.align-items-baseline
                .col-2
                    .logo
                        img(src="../img/logo.png", alt="")
                .col-10.d-md-none.d-lg-flex.d-none.justify-content-end
                    nav
                        ul.navigation-header.menu.d-flex.align-items-center(class=colorTheme)
                            for item in menu 
                                li 
                                    a(href=item[1]) #{item[0]}
                .burderBor
                    .burger#burger
                        span

