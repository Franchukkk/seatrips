mixin cardsSpecial(cardsSpecial)
    div.card.rounded-0.border-0.figure-special
        img.card-img-top(src=cardsSpecial.img, alt=cardsSpecial.alt)
        div.card-body
            if cardsSpecial.isBest
                .best-offer
            h5.card-title.regular #{cardsSpecial.title}
            p.card-text
                for Text in cardsSpecial.description 
                    p.descriptionFigure.m-0  #{Text}
            .d-flex    
                p.blue-text.font-weight-normal #{cardsSpecial.price} 
                    | грн
                a.order(href="#") замовити
